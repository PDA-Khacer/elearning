@using Website.Model;
@{
    ViewBag.Title = "classCourse";
    Layout = "~/Views/Shared/Layout_student.cshtml";
    List<ClassCourse> lstCC = ViewBag.listClassCoures.classCourses;
    Course course = ViewBag.Couse;
}

<h2>Thống kê lớp học phần</h2>

<div class="table-responsive">
    <div class="row container-modal-search-student">
        <div class="col-sm-2">
            <label for="formGroupExampleInput">Tìm kiếm lớp học phần</label>
        </div>
        <div class="col">
            <input type="text" class="form-control" id="findStudentInSystem-tb" placeholder="Điền thông tin">
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Tên
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Mã
                    </label>
                </div>
            </div>
        </div>
        <div class="col-sm-1">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Lớp
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        ...
                    </label>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <button type="button" id="findStudent-btn" class="btn btn-info form-control"><i class="fas fa-search"></i></button>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col" class="table-info">#</th>
                <th scope="col" class="table-info">Mã lớp học phần</th>
                <th scope="col" class="table-info">Tên lớp học phần</th>
                <th scope="col" class="table-info">Số lượng sinh viên</th>
                <th scope="col" class="table-info">Số lượng giáo viên</th>
                <th scope="col" class="table-info">Số lượng bài học</th>
                <th scope="col" class="table-info">Trạng thái</th>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (lstCC == null)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>test</td>
                    <td>Test</td>
                    <td>
                        <button type="button" class="btn btn-outline-dark">Chi tiết</button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-warning">Sửa</button>
                        <button type="button" class="btn btn-outline-danger">Xóa</button>
                    </td>
                </tr>
            }
            else
            {
                int i = 0;
                foreach (ClassCourse item in lstCC)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.CodeClass</td>
                        <td>@item.NameClass</td>
                        <td>@item.LstStudent.accounts.Count</td>
                        <td>@item.LstTeacher.accounts.Count</td>
                        <td>@item.LstLecture.lectures.Count</td>
                        @if (item.State == 1)
                        {
                            <td style="color:forestgreen">Họat động</td>
                        }
                        else
                        {
                            <td style="color:red">Ngừng hoạt động</td>
                        }


                    </tr>
                }
            }

        </tbody>
    </table>
</div>
